<!DOCTYPE html>
<html>
  <head>
    <title>All Tutors</title>
    <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4-4.6.0/jszip-2.5.0/dt-1.11.3/b-2.0.1/b-html5-2.0.1/b-print-2.0.1/datatables.min.css"/>
  <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/v/bs4-4.6.0/jszip-2.5.0/dt-1.11.3/b-2.0.1/b-html5-2.0.1/b-print-2.0.1/datatables.min.js"></script>
  </head>
  <body>
    <div class="flex justify-center items-center h-screen">
      <div class="w-full sm:w-3/4 md:w-2/3 lg:w-1/2 xl:w-1/3 p-6 bg-white shadow-lg rounded-lg">
        <h1 class="text-2xl font-bold mb-4">Profiles</h1>
        <table id="tutors-table" class="table-auto w-full">
          <thead>
            <tr class="bg-cyan-600">
              <th class="px-4 py-2">Name</th>
              <th class="px-4 py-2">Email</th>
              <th class="px-4 py-2">Gender</th>
              <th class="px-4 py-2">Mother Tongue</th>
              <!-- <th class="px-4 py-2">Date of Birth</th> -->
              <th class="px-4 py-2">Mobile Number</th>
              <th class="px-4 py-2">Govt ID Type</th>
              <th class="px-4 py-2">Government ID Number</th>
              <th class="px-4 py-2">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% allTuts.forEach(function(profile) { %>
                <tr>
                  <td class="border px-4 py-2"><%= profile.name %></td>
                  <td class="border px-4 py-2"><%= profile.email %></td>
                  <td class="border px-4 py-2"><%= profile.gender %></td>
                  <td class="border px-4 py-2"><%= profile.motherTongue %></td>
                  <!-- <td class="border px-4 py-2"><%= profile.dateOfBirth %></td> -->
                  <td class="border px-4 py-2"><%= profile.mobileNumber %></td>
                  <td class="border px-4 py-2"><%= profile.govtIDType %></td>
                  <td class="border px-4 py-2"><%= profile.governmentIdentificationNumber %></td>
                  <td class="border px-4 py-2">
                    <a href="/tutor/gettutor/<%= profile.tutorId %>" class="text-blue-500 hover:text-blue-800 mr-4">View</a>
                    <a href="/tutor/gettutor/<%= profile._id %>/edit" class="text-indigo-500 hover:text-indigo-800 mr-4">Edit</a>
                    <form class="inline-block" action="/tutor/<%= profile._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this tutor?')">
                      <button type="submit" class="text-red-500 hover:text-red-800">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
  <script>
    $(document).ready(function() {
      $('#tutors-table').DataTable({
        "pageLength": 10
      });
    });
  </script>
</html>
